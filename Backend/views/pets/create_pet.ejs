<% include ../common/header.ejs %>

<div class="container">
    <p><a href="/">На головну</a></p>
<!--TODO: complete the form-->
    <div class="jumbotron text-center">
        <form class="form-horizontal create-pet-form" method="post" action="/pets" enctype="multipart/form-data">
            <fieldset>

                <!-- Form Name -->
                <legend>Створити оголошення:</legend>

                <!-- Text input-->
                <div class="form-group">
                    <label class="col-md-4 control-label" for="name">Кличка:</label>
                    <div class="col-md-4">
                        <input id="name" name="name" type="text" placeholder="name" class="form-control input-md">
                    </div>
                </div>

                <!--todo: handle image upload-->
                 <!--File Button-->
                <div class="form-group">
                    <label class="col-md-4 control-label" for="image">Додати фото:</label>
                    <div class="col-md-4">
                        <input id="image" name="image" class="input-file" type="file">
                    </div>
                </div>

                <!--TODO: create enumeration of all available species and pass it here-->
                <!-- Select Basic -->
                <div class="form-group">
                    <label class="col-md-4 control-label" for="species">Вид:</label>
                    <div class="col-md-4">
                        <select id="species" name="species" class="form-control">
                            <!--додати більше видів-->
                            <option value="cat">Кіт</option>
                            <option value="dog">Собака</option>
                            <option value="rabbit">Кролик</option>
                        </select>
                    </div>
                </div>

                <!-- Multiple Radios (inline) -->
                <div class="form-group">
                    <label class="col-md-4 control-label" for="sex">Стать:</label>
                    <div class="col-md-4">
                        <label class="radio-inline" for="sex-male">
                            <input type="radio" name="sex" id="sex-male" value="male" checked="checked">
                           Хлопчик
                        </label>
                        <label class="radio-inline" for="sex-female">
                            <input type="radio" name="sex" id="sex-female" value="female">
                            Дівчинка
                        </label>
                    </div>
                </div>

                <!-- Textarea -->
                <div class="form-group">
                    <label class="col-md-4 control-label" for="other">Опис:</label>
                    <div class="col-md-4">
                        <textarea class="form-control" id="other" name="other">Додайте опис про улюбленця...</textarea>
                    </div>
                </div>

                <!-- Button -->
                <div class="form-group">
                    <label class="col-md-4 control-label" for="create-pet-button"></label>
                    <div class="col-md-4">
                        <button id="create-pet-button" type="submit" class="btn btn-success">В добрі руки</button>
                    </div>
                </div>

            </fieldset>
        </form>


    </div>
   <div><img class="illustration-1" src="https://dl.dropboxusercontent.com/u/92390430/find.png"> </div>

</div>




