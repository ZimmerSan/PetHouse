<% include ../common/header.ejs %>
<!--TODO complete this page-->
<h1>Edit pet</h1>
<div class="container">
    <a href="/">На головну</a>
    <!--TODO: complete the form-->
    <form class="form-horizontal create-pet-form" method="post" enctype="multipart/form-data">
        <fieldset>

            <!-- Form Name -->
            <legend>Edit pet:</legend>

            <!-- Text input-->
            <div class="form-group">
                <label class="col-md-4 control-label" for="name">Кличка:</label>
                <div class="col-md-4">
                    <input id="name" name="name" type="text" placeholder="name" class="form-control input-md" value="<%=pet.pet.name%>">
                </div>
            </div>

            <!--todo: handle image upload-->
            <!--File Button-->
            <div class="form-group">
                <label class="col-md-4 control-label" for="image">Додати фото:</label>
                <div class="col-md-4">
                    <input type="hidden" name="imageOld" value="<%=pet.pet.img%>">
                    <input id="image" name="image" class="input-file" type="file">
                </div>
            </div>

            <!--TODO: create enumeration of all available species and pass it here-->
            <!-- Select Basic -->
            <div class="form-group">
                <label class="col-md-4 control-label" for="species">Вид:</label>
                <div class="col-md-4">
                    <select id="species" name="species" class="form-control">
                        <!--додати більше видів-->
                        <option value="cat">Кіт</option>
                        <option value="dog">Собака</option>
                        <option value="rabbit">Кролик</option>
                    </select>
                </div>
            </div>

            <!-- Multiple Radios (inline) -->
            <div class="form-group">
                <label class="col-md-4 control-label" for="sex">Стать:</label>
                <div class="col-md-4">
                    <label class="radio-inline" for="sex-male">
                        <input type="radio" name="sex" id="sex-male" value="male" <%if(pet.pet.sex === 'male'){checked="checked"}%>>
                        Хлопчик
                    </label>
                    <label class="radio-inline" for="sex-female">
                        <input type="radio" name="sex" id="sex-female" value="female" <%if(pet.pet.sex === 'female'){checked="checked"}%>>
                        Дівчинка
                    </label>
                </div>
            </div>

            <!-- Textarea -->
            <div class="form-group">
                <label class="col-md-4 control-label" for="other">Опис:</label>
                <div class="col-md-4">
                    <textarea class="form-control" id="other" name="other" value="<%=pet.pet.other%>">Додайте опис про улюбленця...</textarea>
                </div>
            </div>

            <!-- Button -->
            <div class="form-group">
                <label class="col-md-4 control-label" for="create-pet-button"></label>
                <div class="col-md-4">
                    <button id="create-pet-button" type="submit" class="btn btn-success">Зберегти</button>
                </div>
            </div>

        </fieldset>
    </form>
</div>
</div>
<% include ../common/footer.ejs %>